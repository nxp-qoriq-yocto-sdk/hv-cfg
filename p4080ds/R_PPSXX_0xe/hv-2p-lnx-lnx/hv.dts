/* Hypervisor Configuration tree containing all hypervisor configuration
 * parameters and partition definition information.
 * (Note -- Please refer to Hypervisor SW Reference Manual
 * (Chapter 5 Configuration) for further details)
 *
 * Copyright 2011 Freescale Semiconductor, Inc.
 */

/dts-v1/;

/ {	// root node

	// The root node of the configuration device tree must contain a
	// compatible property that identifies the device tree as a hypervisor

	compatible = "fsl,hv-config";

	// =====================================================
	// Physical Memory Areas
	// =====================================================
	lnx1_pma: lnx1_pma {
		compatible = "phys-mem-area";
		addr = <0x0 0x00000000>;	// Linux
		size = <0x0 0x40000000>;	// 1GB
	};

	lnx2_pma: lnx2_pma {
		compatible = "phys-mem-area";
		addr = <0x0 0x40000000>;	// Linux
		size = <0x0 0x20000000>;	// 512MB
	};

	images_pma: images_pma {
		compatible = "phys-mem-area";
		addr = <0x0 0x78000000>;	// Used for boot-from-RAM
		size = <0x0 0x04000000>;	// 64MB
	};

	pma15: pma15 {
		compatible = "phys-mem-area";
		addr = <0x0 0x7c000000>;	// For MAC-less Ethernet Linux1 and Linux2
		size = <0x0 0x01000000>;	// 16MB
	};

	hv_pma: hv_pma {
		compatible = "phys-mem-area";
		addr = <0x0 0x7f000000>;	// Hypervisor
		size = <0x0 0x01000000>;	// 16MB
	};

	// =====================================================
	// DMA Windows
	// =====================================================
	dma-windows {
		// DMA window for part1_linux
		dw_linux1: dw_linux1 {
			compatible = "dma-window";
			guest-addr = <0 0>;
			size = <0x1 0x00000000>; // 4GB
			subwindow-count = <4>;

			sub-window@0 {
				compatible = "dma-subwindow";
				guest-addr = <0 0>;
				size = <0 0x40000000>; // 1GB
			};

			// ====================================================
			// The window is used for MSIIR translation. The
			// hypervisor sets  a property in the guest device tree
			// (msi-address-64) which indicates the guest physical
			// address of the MSIIR register.
			// This address must be in the next page after the end
			// of DDR as seen by the guest. This is because, Linux
			// is extending the DDR ATMU with one page in order to
			// cover the MSIIR register.
			// ====================================================
			sub-window@1 {		// MSI sub-window
				compatible = "dma-subwindow";
				guest-addr = <0 0x40000000>;
				size = <0 0x1000>; // 4KB
				pcie-msi-subwindow;
			};

			sub-window@2 {		// Inter-partition region
				compatible = "dma-subwindow";
				guest-addr = <0 0x80000000>;
				size = <0 0x1000000>; // 16MB
			};
		};

		// DMA window for part2_linux
		dw_linux2: dw_linux2 {
			compatible = "dma-window";
			guest-addr = <0 0>;
			size = <0x1 0x00000000>; // 4GB
			subwindow-count = <4>;

			sub-window@0 {
				compatible = "dma-subwindow";
				guest-addr = <0 0>;
				size = <0 0x20000000>; // 512MB
			};

			sub-window@1 {		// Inter-partition region
				compatible = "dma-subwindow";
				guest-addr = <0 0x80000000>;
				size = <0 0x1000000>; // 16MB
			};
		};

		// DMA window for stash_dqrr for qman-portal0
		dw_dqrr_qportal0: window3 {
			compatible = "dma-window";
			guest-addr = <0xf 0xf4200000>;
			size = <0 0x4000>;
		};

		// DMA window for stash_dqrr for qman-portal1
		dw_dqrr_qportal1: window4 {
			compatible = "dma-window";
			guest-addr = <0xf 0xf4204000>;
			size = <0 0x4000>;
		};

		// DMA window for stash_dqrr for qman-portal2
		dw_dqrr_qportal2: window5 {
			compatible = "dma-window";
			guest-addr = <0xf 0xf4208000>;
			size = <0 0x4000>;
		};

		// DMA window for stash_dqrr for qman-portal3
		dw_dqrr_qportal3: window6 {
			compatible = "dma-window";
			guest-addr = <0xf 0xf420c000>;
			size = <0 0x4000>;
		};

		// DMA window for stash_dqrr for qman-portal4
		dw_dqrr_qportal4: window7 {
			compatible = "dma-window";
			guest-addr = <0xf 0xf4210000>;
			size = <0 0x4000>;
		};

		// DMA window for stash_dqrr for qman-portal5
		dw_dqrr_qportal5: window8 {
			compatible = "dma-window";
			guest-addr = <0xf 0xf4214000>;
			size = <0 0x4000>;
		};

		// DMA window for stash_dqrr for qman-portal6
		dw_dqrr_qportal6: window9 {
			compatible = "dma-window";
			guest-addr = <0xf 0xf4218000>;
			size = <0 0x4000>;
		};

		// DMA window for stash_dqrr for qman-portal7
		dw_dqrr_qportal7: window10 {
			compatible = "dma-window";
			guest-addr = <0xf 0xf421c000>;
			size = <0 0x4000>;
		};

		// DMA window for stash_dqrr for qman-portal8
		dw_dqrr_qportal8: window11 {
			compatible = "dma-window";
			guest-addr = <0xf 0xf4220000>;
			size = <0 0x4000>;
		};

		// DMA window for stash_dqrr for qman-portal9
		dw_dqrr_qportal9: window12 {
			compatible = "dma-window";
			guest-addr = <0xf 0xf4224000>;
			size = <0 0x4000>;
		};
	};

	// =====================================================
	// Hypervisor Config
	// Hypervisor is also configured via the Hypervisor
	// configuration tree. A special node and subtree defines
	// set of global configuration parameters and a number of
	// device nodes assigning I/O devices to the hypervisor
	// =====================================================
	hv: hypervisor-config {
		compatible = "hv-config";

		// phandle to byte-channel used for hypervisor's console
		stdout = <&hvbc>;

		hv-memory {
			compatible = "hv-memory";
			phys-mem = <&hv_pma>;
		};

		hvbc: byte-channel {
			compatible = "byte-channel";
			endpoint = <&uartmux>;
			mux-channel = <0>;
		};

		// Device nodes given below are the physical I/O
		// devices assigned to hypervisor
		corenet-law {
			device = "/soc/corenet-law";
		};

		cpc {
			device = "/soc/l3-cache-controller";
		};

		corenet-cf {
			device = "/soc/corenet-cf";
		};

		guts {
			device = "/soc/global-utilities@e0000";
		};

		rcpm {
			device = "/soc/global-utilities@e2000";
		};

		iommu {
			device = "/soc/iommu";
		};

		mpic {
			device = "/soc/pic@40000";
		};

		serial0: serial0 {
			device = "serial0";
		};

		serial1: serial1 {
			device = "serial1";
		};

		serial2: serial2 {
			device = "serial2";
		};

		serial3: serial3 {
			device = "serial3";
		};
	};

	// =====================================================
	// UART mux
	// This node is referenced by byte-channels that use mux
	// as an endpoint
	// =====================================================
	uartmux: uartmux {
		compatible = "byte-channel-mux";
		endpoint = <&serial0>;
	};

	// =====================================================
	// To keep the scenarios hv-1/2/4p as diff-able as possible
	// we always use labels part1, part2, part<n>
	// In hv-2p scenario, there are 2 partitions - 2 Linux
	// Partition1 --- part1 --- Linux partition
	// Partition2 --- part2 --- Linux partition
	// =====================================================

	// =====================================================
	// Partition 1
	// =====================================================
	part1 {
		// Indicates that it is a partition node
		compatible = "partition";
		label = "p1-linux";
		// CPUs #0 to #6 are assigned to this partition
		cpus = <0 7>;
		guest-image = <0xf 0xe8020000 0 0 0 0x700000>;
		linux-rootfs = <0xf 0xe9300000 0 0x01300000 0 0x02800000>;
		dtb-window = <0 0x1000000 0 0x12000>;

		// Temporary until Linux uses enable LIODN hcall
		no-dma-disable;

		gpma0 {
			compatible = "guest-phys-mem-area";
			phys-mem = <&lnx1_pma>;
			guest-addr = <0 0>;
		};

		gpma1 {
			compatible = "guest-phys-mem-area";
			phys-mem = <&pma15>;	// Interpartition between Linux1 - Linux2
			guest-addr = <0 0x80000000>;
			node-update {
				delete-prop = "device_type";
			};
		};

		aliases {
			stdout = <&part1_bc0>;
		};

		// =====================================================
		// Devices assigned to the partition - device nodes
		// device node is child of partition node and is used to
		// assign physical I/O devices to partition
		// =====================================================
		part1_bc0: byte-channel@1 {
			compatible = "byte-channel";
			endpoint = <&uartmux>;
			mux-channel = <1>;
		};

		// Bman portals assigned to this partition
		bman-portal@0 {
			device = "/bman-portals/bman-portal@0";
		};

		bman-portal@4000 {
			device = "/bman-portals/bman-portal@4000";
		};

		bman-portal@8000 {
			device = "/bman-portals/bman-portal@8000";
		};

		bman-portal@c000 {
			device = "/bman-portals/bman-portal@c000";
		};

		bman-portal@10000 {
			device = "/bman-portals/bman-portal@10000";
		};

		bman-portal@14000 {
			device = "/bman-portals/bman-portal@14000";
		};

		bman-portal@18000 {
			device = "/bman-portals/bman-portal@18000";
		};

		bman-portal@20000 {
			device = "/bman-portals/bman-portal@20000";
		};

		bman-portal@24000 {
			device = "/bman-portals/bman-portal@24000";
		};

		// Bman buffer pools assigned to this partition
		buffer-pool@7 {
			device = "buffer-pool@7";
		};

		buffer-pool@8 {
			device = "buffer-pool@8";
		};

		buffer-pool@9 {
			device = "buffer-pool@9";
		};

		qman-portal@0 {
			device = "/qman-portals@ff4200000/qman-portal@0";

			stash-mem {
				liodn-index = <1>;
				dma-window = <&dw_linux1>;
				operation-mapping = <0>;
				stash-dest = <3>;
			};

			stash-dqrr {
				liodn-index = <0>;
				dma-window = <&dw_dqrr_qportal0>;
				operation-mapping = <0>;
				stash-dest = <3>;
			};
		};

		qman-portal@4000 {
			device = "/qman-portals@ff4200000/qman-portal@4000";

			stash-mem {
				liodn-index = <1>;
				dma-window = <&dw_linux1>;
				operation-mapping = <0>;
				stash-dest = <3>;
			};

			stash-dqrr {
				liodn-index = <0>;
				dma-window = <&dw_dqrr_qportal1>;
				operation-mapping = <0>;
				stash-dest = <3>;
			};
		};

		qman-portal@8000 {
			device = "/qman-portals@ff4200000/qman-portal@8000";

			stash-mem {
				liodn-index = <1>;
				dma-window = <&dw_linux1>;
				operation-mapping = <0>;
				stash-dest = <3>;
			};

			stash-dqrr {
				liodn-index = <0>;
				dma-window = <&dw_dqrr_qportal2>;
				operation-mapping = <0>;
				stash-dest = <3>;
			};
		};

		qman-portal@c000 {
			device = "/qman-portals@ff4200000/qman-portal@c000";

			stash-mem {
				liodn-index = <1>;
				dma-window = <&dw_linux1>;
				operation-mapping = <0>;
				stash-dest = <3>;
			};

			stash-dqrr {
				liodn-index = <0>;
				dma-window = <&dw_dqrr_qportal3>;
				operation-mapping = <0>;
				stash-dest = <3>;
			};
		};

		qman-portal@10000 {
			device = "/qman-portals@ff4200000/qman-portal@10000";

			stash-mem {
				liodn-index = <1>;
				dma-window = <&dw_linux1>;
				operation-mapping = <0>;
				stash-dest = <3>;
			};

			stash-dqrr {
				liodn-index = <0>;
				dma-window = <&dw_dqrr_qportal4>;
				operation-mapping = <0>;
				stash-dest = <3>;
			};
		};

		qman-portal@14000 {
			device = "/qman-portals@ff4200000/qman-portal@14000";

			stash-mem {
				liodn-index = <1>;
				dma-window = <&dw_linux1>;
				operation-mapping = <0>;
				stash-dest = <3>;
			};

			stash-dqrr {
				liodn-index = <0>;
				dma-window = <&dw_dqrr_qportal5>;
				operation-mapping = <0>;
				stash-dest = <3>;
			};
		};

		qman-portal@18000 {
			device = "/qman-portals@ff4200000/qman-portal@18000";

			stash-mem {
				liodn-index = <1>;
				dma-window = <&dw_linux1>;
				operation-mapping = <0>;
				stash-dest = <3>;
			};

			stash-dqrr {
				liodn-index = <0>;
				dma-window = <&dw_dqrr_qportal6>;
				operation-mapping = <0>;
				stash-dest = <3>;
			};
		};

		qman-portal@20000 {
			device = "/qman-portals@ff4200000/qman-portal@20000";

			stash-mem {
				liodn-index = <1>;
				dma-window = <&dw_linux1>;
				operation-mapping = <0>;
				stash-dest = <3>;
			};

			stash-dqrr {
				liodn-index = <0>;
				dma-window = <&dw_dqrr_qportal8>;
				operation-mapping = <0>;
				stash-dest = <3>;
			};
		};

		qman-portal@24000 {
			device = "/qman-portals@ff4200000/qman-portal@24000";

			stash-mem {
				liodn-index = <1>;
				dma-window = <&dw_linux1>;
				operation-mapping = <0>;
				stash-dest = <3>;
			};

			stash-dqrr {
				liodn-index = <0>;
				dma-window = <&dw_dqrr_qportal9>;
				operation-mapping = <0>;
				stash-dest = <3>;
			};
		};

		memory-controller@8000 {
			device = "/soc/memory-controller@8000";
		};

		memory-controller@9000 {
			device = "/soc/memory-controller@9000";
		};

		msi0: msi@41600 {
			device = "msi0";
		};

		msi2: msi@41a00 {
			device = "msi2";
		};

		dma0 {
			device = "dma0";
			dma-window = <&dw_linux1>;
		};

		sdhc {
			device = "sdhc";
			dma-window = <&dw_linux1>;
		};

		i2c@118000 {
			device = "/soc/i2c@118000";
		};

		i2c@118100 {
			device = "/soc/i2c@118100";
		};

		flash {
			device = "/localbus";
		};

		gpio {
			device = "/soc/gpio";
		};

		pci0 {
			device = "pci0";
			map-ranges;
			dma-window = <&dw_linux1>;
			node-update-phandle {
				fsl,msi = <&msi0>;
			};
		};

		pci2 {
			device = "pci2";
			map-ranges;
			dma-window = <&dw_linux1>;
			node-update-phandle {
				fsl,msi = <&msi2>;
			};
		};

		usb0 {
			device = "usb0";
			dma-window = <&dw_linux1>;
		};

		crypto {
			device = "/soc/crypto";
			dma-window = <&dw_linux1>;
		};

		pme {
			device = "pme";
			dma-window = <&dw_linux1>;
		};

		qman {
			device = "qman";
			dma-window = <&dw_linux1>;
			operation-mapping = <2>;	// OMI_QMAN_PRIV
			stash-dest = <3>;		// L3/CPC
		};

		bman {
			device = "bman";
			dma-window = <&dw_linux1>;
		};

		fman0 {
			device = "fman0";
			dma-window = <&dw_linux1>;
		};

		fman1 {
			device = "fman1";
			dma-window = <&dw_linux1>;
		};

		// FMAN0 eth4 - XAUI 10G -- ethernet 4 assigned to this partition
		dpa-ethernet@4 {
			device = "/fsl,dpaa/ethernet@4";
		};

		// FMAN0 RGMII -- ethernet 1 assigned to this partition
		dpa-ethernet@1 {
			device = "/fsl,dpaa/ethernet@1";
		};

		// FMAN1 SGMII -- ethernet 7 assigned to this partition
		dpa-ethernet@7 {
			device = "/fsl,dpaa/ethernet@7";
		};

		// FMAN1 SGMII -- ethernet 8 assigned to this partition
		dpa-ethernet@8 {
			device = "/fsl,dpaa/ethernet@8";
		};

		// FMAN1 XAUI -- ethernet 9 assigned to this partition
		dpa-ethernet@9 {
			device = "/fsl,dpaa/ethernet@9";
		};

		portal-devices {
			fman0 {
				device = "fman0";
				dma-window = <&dw_linux1>;
			};

			fman1 {
				device = "fman1";
				dma-window = <&dw_linux1>;
			};

			caam {
				device = "crypto";
				dma-window = <&dw_linux1>;
			};

			pme {
				device = "pme";
				dma-window = <&dw_linux1>;
			};
		};

		node-update {
			part1_bp10: buffer-pool@10 {
				compatible = "fsl,p4080-bpool", "fsl,bpool";
				fsl,bpid = <10>;
				fsl,bpool-ethernet-cfg = <0 0x80 0 192 0 0x80000000>;
				fsl,bpool-ethernet-seeds;
			};

			part1_bp11: buffer-pool@11 {
				compatible = "fsl,p4080-bpool", "fsl,bpool";
				fsl,bpid = <11>;
				fsl,bpool-ethernet-cfg = <0 0x80 0 576 0 0x80006000>;
				fsl,bpool-ethernet-seeds;
			};

			part1_bp12: buffer-pool@12 {
				compatible = "fsl,p4080-bpool", "fsl,bpool";
				fsl,bpid = <12>;
				fsl,bpool-ethernet-cfg = <0 0x80 0 1600 0 0x80018000>;
				fsl,bpool-ethernet-seeds;
			};

			part1_bp13: buffer-pool@13 {
				compatible = "fsl,p4080-bpool", "fsl,bpool";
				fsl,bpid = <13>;
				fsl,bpool-ethernet-cfg = <0 0x80 0 192 0 0x8004A000>;
				fsl,bpool-ethernet-seeds;
			};

			part1_bp14: buffer-pool@14 {
				compatible = "fsl,p4080-bpool", "fsl,bpool";
				fsl,bpid = <14>;
				fsl,bpool-ethernet-cfg = <0 0x80 0 576 0 0x80050000>;
				fsl,bpool-ethernet-seeds;
			};

			part1_bp15: buffer-pool@15 {
				compatible = "fsl,p4080-bpool", "fsl,bpool";
				fsl,bpid = <15>;
				fsl,bpool-ethernet-cfg = <0 0x80 0 1600 0 0x80062000>;
				fsl,bpool-ethernet-seeds;
			};

			// Add a subnode dpa-ethernet@10 in fsl,dpaa node in GDT
			fsl,dpaa {
				// Link with Linux2 (MAC-less)
				dpa-ethernet@10 {
					compatible = "fsl,p4080-dpa-ethernet", "fsl,dpa-ethernet";
					fsl,qman-frame-queues-rx = <0x4000 8>;
					fsl,qman-frame-queues-tx = <0x4008 8>;
					local-mac-address = [02 00 c0 a8 6f fe];
				};

				// Shared with Linux2 (Shared-MAC)
				// The interface has to be set to promiscuous mode!
				dpa-ethernet@1 {
					compatible = "fsl,p4080-dpa-ethernet", "fsl,dpa-ethernet";
					fsl,qman-frame-queues-rx = <0x230 1 0x231 1 0x210 3>;
					fsl,qman-frame-queues-tx = <0x234 1 0x238 1 0x200 8>;
				};
			};

			chosen {
				bootargs = "usdpaa_mem=64M";
			};
		};

		// Add properties with phandle values to the node dpa-ethernet@10
		node-update-phandle {
			fsl,dpaa {
				dpa-ethernet@10 {
					fsl,bman-buffer-pools = <&part1_bp10 &part1_bp11 &part1_bp12>;
				};

				dpa-ethernet@1 {
					fsl,bman-buffer-pools = <&part1_bp13 &part1_bp14 &part1_bp15>;
				};
			};
		};

		dpa-fman0-oh@1 {
			device = "/fsl,dpaa/dpa-fman0-oh@1";
		};

		bman-bpids {
			device = "/bman-portals@ff4000000/bman-bpids@0";

			node-update {
				fsl,bpid-range = <32 16>;
			};
		};

		qman-fqids {
			device = "/qman-portals@ff4200000/qman-fqids@0";

			node-update {
				fsl,fqid-range = <0x180 0x80>;
			};
		};

		qman-pools {
			device = "/qman-portals@ff4200000/qman-pools@0";

			node-update {
				fsl,pool-channel-range = <41 7>;
			};
		};

		qman-cgrids {
			device = "/qman-portals@ff4200000/qman-cgrids@0";

			node-update {
				fsl,cgrid-range = <0x80 0x80>;
			};
		};
	};

	// =====================================================
	// Partition 2
	// =====================================================
	part2 {
		compatible = "partition";
		label = "p2-linux";
		// CPU #7 is assigned to this partition
		cpus = <7 1>;
		guest-image = <0xf 0xe8020000 0 0 0 0x700000>;
		linux-rootfs = <0xf 0xe9300000 0 0x01300000 0 0x02800000>;
		dtb-window = <0 0x1000000 0 0x12000>;

		// Temporary until Linux uses enable LIODN hcall
		no-dma-disable;

		gpma0 {
			compatible = "guest-phys-mem-area";
			phys-mem = <&lnx2_pma>;
			guest-addr = <0 0>;
		};

		gpma1 {
			compatible = "guest-phys-mem-area";
			phys-mem = <&pma15>;	// Interpartition between Linux1 - Linux2
			guest-addr = <0 0x80000000>;
			node-update {
				delete-prop = "device_type";
			};
		};

		aliases {
			stdout = <&part2_bc0>;
		};

		// =====================================================
		// Devices assigned to the partition - device nodes
		// device node is child of partition node and is used to
		// assign physical I/O devices to partition
		// =====================================================
		part2_bc0: byte-channel@2 {
			compatible = "byte-channel";
			endpoint = <&uartmux>;
			mux-channel = <2>;
		};

		bman-portal@1c000 {
			device = "/bman-portals/bman-portal@1c000";
			node-update {
				delete-prop = "fsl,usdpaa-portal";
			};

		};

		part2_qportal7: qman-portal@1c000 {
			device = "/qman-portals@ff4200000/qman-portal@1c000";

			node-update {
				delete-prop = "fsl,usdpaa-portal";
				delete-node = "pme@0", "crypto@0";
			};

			stash-mem {
				liodn-index = <1>;
				dma-window = <&dw_linux2>;
				operation-mapping = <0>;
				stash-dest = <3>;
			};

			stash-dqrr {
				liodn-index = <0>;
				dma-window = <&dw_dqrr_qportal7>;
				operation-mapping = <0>;
				stash-dest = <3>;
			};
		};

		// =====================================================
		// In Shared-MAC scenario, PAMU is using Fman's LIODN in 
		// order to authorize tranzactions for the second 
		// partition, thus the fman node have to be included in 
		// the second partition, so that PAMU to be configured 
		// accordingly.
		// =====================================================
		portal-devices {
			fman0 {
				device = "fman0";
				dma-window = <&dw_linux2>;
			};

			fman1 {
				device = "fman1";
				dma-window = <&dw_linux2>;
			};
		};

		dma1 {
			device = "dma1";
			dma-window = <&dw_linux2>;
		};

		i2c@119000 {
			device = "/soc/i2c@119000";
		};

		i2c@119100 {
			device = "/soc/i2c@119100";
		};

		node-update {
			// =====================================================
			// Even though it's part1 that seeds these buffer pools,
			// their "fsl,bpool-ethernet-cfg" properties must match
			// those in part1 exactly, since the resulting buffer
			// addresses will be exchanged between the partitions
			// through QMan, via FDs, without further translation.
			// Furthermore, the addresses must be mapable in both
			// guests, and, when mapped on either guest,
			// each should point to the same physical memory,
			// otherwise a segfault/machine check will occur.
			// =====================================================
			part2_bp10: buffer-pool@10 {
				compatible = "fsl,p4080-bpool", "fsl,bpool";
				fsl,bpid = <10>;
				fsl,bpool-ethernet-cfg = <0 0x80 0 192 0 0x80000000>;
			};

			part2_bp11: buffer-pool@11 {
				compatible = "fsl,p4080-bpool", "fsl,bpool";
				fsl,bpid = <11>;
				fsl,bpool-ethernet-cfg = <0 0x80 0 576 0 0x80006000>;
			};

			part2_bp12: buffer-pool@12 {
				compatible = "fsl,p4080-bpool", "fsl,bpool";
				fsl,bpid = <12>;
				fsl,bpool-ethernet-cfg = <0 0x80 0 1600 0 0x80018000>;
			};

			part2_bp13: buffer-pool@13 {
				compatible = "fsl,p4080-bpool", "fsl,bpool";
				fsl,bpid = <13>;
				fsl,bpool-ethernet-cfg = <0 0x80 0 192 0 0x8004A000>;
			};

			part2_bp14: buffer-pool@14 {
				compatible = "fsl,p4080-bpool", "fsl,bpool";
				fsl,bpid = <14>;
				fsl,bpool-ethernet-cfg = <0 0x80 0 576 0 0x80050000>;
			};

			part2_bp15: buffer-pool@15 {
				compatible = "fsl,p4080-bpool", "fsl,bpool";
				fsl,bpid = <15>;
				fsl,bpool-ethernet-cfg = <0 0x80 0 1600 0 0x80062000>;
			};

			fsl,dpaa {
				compatible = "fsl,p4080-dpaa", "fsl,dpaa";

				// =====================================================
				// Link with Linux1 (MAC-less)
				// The TX/RX queues of this interface are same with the
				// RX/TX queues of the interface dpa-ethernet@10 in
				// partition 1
				// =====================================================
				dpa-ethernet@10 {
					compatible = "fsl,p4080-dpa-ethernet", "fsl,dpa-ethernet";
					fsl,qman-frame-queues-rx = <0x4008 8>;
					fsl,qman-frame-queues-tx = <0x4000 8>;
					local-mac-address = [02 00 c0 a8 79 fe];
				};

				// =====================================================
				// Shared with Linux1 (Shared-MAC)
				// The TX queues of this interface are the same with the
				// TX queues of the interface dpa-ethernet@1 in
				// partition 1; the RX queues are different
				// =====================================================
				dpa-ethernet@20 {
					compatible = "fsl,p4080-dpa-ethernet", "fsl,dpa-ethernet";
					fsl,qman-frame-queues-rx = <0x220 3>;
					fsl,qman-frame-queues-tx = <0x200 8>;
					delete-prop = "fsl,fman-mac";
					local-mac-address = [02 00 c0 a8 a1 fe];
				};
			};
			chosen {
				bootargs = "usdpaa_mem=64M";
			};
		};

		node-update-phandle {
			fsl,dpaa {
				dpa-ethernet@10 {
					fsl,bman-buffer-pools = <&part2_bp10 &part2_bp11 &part2_bp12>;
				};

				dpa-ethernet@20 {
					fsl,bman-buffer-pools = <&part2_bp13 &part2_bp14 &part2_bp15>;
				};
			};
		};

		bman-bpids {
			device = "/bman-portals@ff4000000/bman-bpids@0";

			node-update {
				fsl,bpid-range = <48 16>;
			};
		};

		qman-fqids {
			device = "/qman-portals@ff4200000/qman-fqids@0";

			node-update {
				fsl,fqid-range = <0x100 0x80>;
			};
		};

		qman-pools {
			device = "/qman-portals@ff4200000/qman-pools@0";

			node-update {
				fsl,pool-channel-range = <33 8>;
			};
		};

		qman-cgrids {
			device = "/qman-portals@ff4200000/qman-cgrids@0";

			node-update {
				fsl,cgrid-range = <0 0x80>;
			};
		};
	};
};
